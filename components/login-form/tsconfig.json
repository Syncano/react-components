{
  "compilerOptions": {
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "outDir": "./.build/",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "esnext",
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "jsx": "preserve",
    "target": "es6",
    "typeRoots": [
      "node_modules/@types"
    ]
  }
}
